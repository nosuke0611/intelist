<table class='table'>
  <thead>
    <th scope='col' class='col-md-3'><%= tags_sortable 'tag_name', 'タグ名', take_tag_search_params %></th>
    <th scope='col' class='col-md-3'><%= tags_sortable 'created_at', '作成日', take_tag_search_params %></th>
    <th scope='col' class='col-md-1'><%= tags_sortable 'count', '投稿数', take_tag_search_params %></th>
  </thead>
  <tbody>
    <% tags.each do |tag| %>
      <tr>
        <td class='align-middle'>
          <%= link_to tag.tag_name, items_path(searched: { tag_name: tag.tag_name }), class: 'btn-sm btn-info tag' %>
        </td>
        <td><%= "#{l(tag.created_at, format: :date)}" %></td>
        <td class='align-middle'><%= tag.post_tag_maps.count %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= paginate tags, remote: true %>