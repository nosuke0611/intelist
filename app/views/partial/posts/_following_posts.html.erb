<div>
  <ul class='posts'>
    <% if @following_posts.any? %>
      <div class='post'>
        <% @following_posts.each do |post| %>
          <%= render 'partial/posts/post_list', post: post %>
        <% end %>
      </div>
    <% else %>
      <ul>フォローしているユーザーはまだいません</ul>
    <% end %>
  </ul>
  <%= paginate @following_posts %>
</div>
