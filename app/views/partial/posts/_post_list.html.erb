<li id="post-<%= post.id %>">
  <%= link_to gravatar_for(post.user), post.user %>
  <span class='user-name'><%= link_to post.user.name, post.user %></span>
  <span class='item'><%= link_to post.item.name, post.item %></span>
  <span class='content'><%= post.content %></span>
  <span class='tags'>
    <% post.tags.each do |tag| %>
      <span class='tag btn-info'><%= tag.tag_name %></span>
    <% end %>
  </span>
  <span class='timestamp'>
    <%= time_ago_in_words(post.created_at) %>前の投稿
  </span>
  <div class='actions'>
    <%= link_to post_path(post), class: 'btn btn-info text-white' do %>
      <i class='fas fa-info'></i>
    <% end %>
    <% if current_user.own?(post) %>
      <%= link_to "/posts/#{post.id}/edit", class: 'btn btn-success text-white' do %>
        <i class='far fa-edit'></i>
      <% end %>
      <%= link_to post, method: :delete, data: {confirm: '投稿を削除しますか?' }, class: 'btn btn-danger text-white' do %>
        <i class="fas fa-trash-alt"></i>
      <% end %>
    <% else %>
      <span id="like-icon-post-<%= post.id.to_s %>">
        <% if current_user.like?(post) %>
          <%= link_to post_like_path(post.id, post.liked_by(current_user)), method: :delete, remote: true, class: 'btn' do %>
            <i class='fas fa-heart'></i>
          <% end %>
        <% else %>
          <%= link_to post_likes_path(post), method: :post, remote: true, class: 'btn' do %>
            <i class='far fa-heart'></i>
          <% end %>
        <% end %>
      </span>
    <% end %>
  </div>
</li>