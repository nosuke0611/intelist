<div class='modal fade' id='exampleModalCenter' tabindex='-1' role='dialog' aria-labelledby='exampleModalCenterTitle' aria-hidden='true'>
  <div class='modal-dialog modal-dialog-centered' role='document'>
    <div class='modal-content'>
      <div class='modal-header'>
        <h5 class='modal-title' id='exampleModalCenterTitle'>新規投稿</h5>
        <button type='button' class='close' data-dismiss='modal' aria-label='Close'>
          <span aria-hidden='true'>&times;</span>
        </button>
      </div>
      <%= form_with model: @post, local: true do |f| %>
        <div class='modal-body'>
          <div class='form-group'>
            <%= f.label :item_name, 'アイテム名' %>
            <%= f.text_field :item_name, autofocus: true, placeholder: '気になるものを入力', class: 'form-control' %>
          </div>
          <div class='form-group'>
            <%= f.label :content, '投稿内容' %>
            <%= f.text_area :content, placeholder: 'アイテムについてのコメントを入力', class: 'form-control' %>
          </div>
          <div class='form-group'>
            <%= f.label :tag_name, 'タグ名(複数の場合はエンターで区切る)' %>
            <%= f.text_field :tag_name, placeholder: 'タグ名を入力', data: {role: "tagsinput"}, class: 'form-control' %>
          </div>
        </div>
        <div class='modal-footer'>
          <button type='button' class='btn btn-secondary' data-dismiss='modal'>キャンセル</button>
          <div class='actions'>
            <%= f.submit '投稿する', class: 'btn btn-primary w-100' %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
