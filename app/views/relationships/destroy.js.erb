$("#follow-form-<%= @user.id %>").html('<%= j render "partial/users/follow" %>');
$(function(){
  if($('#followers').length){
    $('#followers').html('<%= @user.followers.count %>');
  }
});
$(function(){
  if($('#user-<%= @user.id %>-following').length){
    $('#user-<%= @user.id %>-following').html('<%= @user.following.count %>');
  }
});