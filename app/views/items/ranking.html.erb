<h3 class='page-title'>アイテム投稿数ランキング</h3>
<div class='row'>
  <div class='ranking-search-area' >
    <%= form_with url: ranking_path, class: 'search-form', method: :get, local: false do |f| %>
      <div class='form-group user-search mr-3'>
        <div>
          <%= f.label :follow_status, '対象ユーザー', class: 'form-label' %>
        </div>
        <div class='btn-group btn-group-toggle' data-toggle='buttons'>
          <label class='btn btn-outline-secondary active' >
            <%= f.radio_button :follow_status, :all %>全ユーザー
          </label>
          <label class='btn btn-outline-secondary'>
            <%= f.radio_button :follow_status, :only_follow %>フォローのみ
          </label>
        </div>
      </div>
      <div class='form-group period-search mr-3'>
        <div>
          <%= f.label :period, '対象期間', class: 'form-label' %>
        </div>
        <div class='btn-group btn-group-toggle' data-toggle='buttons'>
          <label class='btn btn-outline-secondary active' >
            <%= f.radio_button :period, :weekly %>週間
          </label>
          <label class='btn btn-outline-secondary'>
            <%= f.radio_button :period, :only_follow %>月間
          </label>
          <label class='btn btn-outline-secondary'>
            <%= f.radio_button :period, :all %>全期間
          </label>
        </div>
      </div>
      <div class='actions form-group ranking-search-btn'>
        <%= f.submit '変更', class: 'btn btn-primary' %>
      </div>
    <% end %>
  </div>
</div>
<div class='items-area'>
  <% if @items.present? %>
    <div class='top-area'>
      <%= render 'partial/items/items_ranking', items: @items %>
    </div>
  <% else %>
    <span>投稿はまだありません</span>
  <% end %>
</div>
