<% provide(:title, 'ランキング') %>
<h3 class='page-title'>アイテム投稿数ランキング</h3>
<div class='ranking-search-area' >
  <%= form_with url: ranking_path, class: 'search-form', method: :get, local: false do |f| %>
    <div class='form-group user-search mr-3'>
      <div>
        <%= f.label :follow_status, '対象ユーザー', class: 'form-label' %>
      </div>
      <div class='btn-group btn-group-toggle' data-toggle='buttons'>
        <label class='btn btn-outline-secondary active' id='all-user-search'>
          <%= f.radio_button :follow_status, :all %>全ユーザー
        </label>
        <label class='btn btn-outline-secondary' id='follow-only-search'>
          <%= f.radio_button :follow_status, :follow_only %>フォローのみ
        </label>
      </div>
    </div>
    <div class='form-group period-search mr-3'>
      <div>
        <%= f.label :period, '対象期間', class: 'form-label' %>
      </div>
      <div class='btn-group btn-group-toggle' data-toggle='buttons'>
        <label class='btn btn-outline-secondary active' id='weekly-search' >
          <%= f.radio_button :period, :weekly %>週間
        </label>
        <label class='btn btn-outline-secondary' id='monthly-search'>
          <%= f.radio_button :period, :monthly %>月間
        </label>
        <label class='btn btn-outline-secondary' id='all-period-search'>
          <%= f.radio_button :period, :all %>全期間
        </label>
      </div>
    </div>
    <div class='actions form-group ranking-search-btn'>
      <%= f.submit '変更', class: 'btn btn-primary' %>
    </div>
  <% end %>
</div>
<div class='items-area'>
  <div class='top-area'>
    <%= render 'partial/items/items_ranking', items: @items %>
  </div>
</div>
