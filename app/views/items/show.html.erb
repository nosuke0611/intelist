<% provide(:title, @item.item_name) %>
<div class='titel-area mb-4'>
  <h3 class='item-title'>
    <%= @item.item_name %>
  </h3>
  <span class='item-newpost ml-3'>
    <button type='button' class='btn btn-primary' data-toggle='modal' data-target='#newpostModalCenter'>
      新規投稿
    </button>
    <%= render 'partial/posts/post_form' %>
  </span>
</div>
<div class='row'>
  <aside class='col-md-2'>
    <div class='card tags-list mb-2'>
      <h6 class='card-header'>関連タグ</h6>
      <div class='card-body'>
        <% @tags.each do |tag| %>
          <%= link_to tag.tag_name, items_path(searched: { tag_name: tag.tag_name }), class: 'btn-sm btn-info tag' %>
        <% end %>
      </div>
    </div>
    <div class='card users mb-4'>
      <h6 class='card-header'>気になっているユーザー</h6>
      <div class='card-body'>
        <% @users.each do |user| %>
          <span><%= link_to user.name, user %></span>
        <% end %>
      </div>
    </div>
  </aside>
  <div class='posts-area col-md-10'>
    <h5>関連する投稿</h5>
    <ul class='post'>
      <%= render 'partial/posts/posts_list', posts: @posts %>
    </ul> 
  </div>
</div>

