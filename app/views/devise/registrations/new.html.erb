<% provide(:title, '新規登録') %>
<div class='main'>
  <div class='card devise-card'>
    <div class='form-title text-center'>
      <h3>ユーザー登録</h3>
    </div>
    <div class='form-wrap'>
      <%= render "devise/shared/error_messages", resource: resource %>
      <%= form_with scope: resource, as: resource_name, url: registration_path(resource_name), local: true do |f| %>
        <div class='form-group mb-3'>
          <%= f.label :name, '名前', class: 'form-label' %>
          <%= f.text_field :name, autofocus: true, placeholder: 'なかがわ', class: 'form-control' %>
        </div>
        
        <div class='form-group mb-3'>
          <%= f.label :email, 'メールアドレス', class: 'form-label' %>
          <%= f.email_field :email, placeholder: 'nakagawa@example.com', class: 'form-control' %>
        </div>

        <div class='form-group mb-3'>
          <%= f.label :password, 'パスワード', class: 'form-label' %>
          <%= f.password_field :password, placeholder: 'P@ssW0rd', class: 'form-control' %>
          <small class='form-text text-muted'>半角英数字8～20文字</small>
        </div>

        <div class='form-group mb-3'>
          <%= f.label :password, '確認用パスワード', class: 'form-label' %>
          <%= f.password_field :password_confirmation, placeholder: 'P@ssW0rd', class: 'form-control' %>
        </div>

        <div class='actions'>
          <%= f.submit '新規登録', class: 'btn btn-primary w-100' %>
        </div>
      <% end %>
    </div>
    <div class='ml-5 mb-3'>
      <%= render 'devise/shared/links' %>
    </div>
  </div>
</div>
