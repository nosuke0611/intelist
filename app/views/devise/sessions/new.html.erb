<div class='main'>
  <div class='card devise-card'>
    <div class='form-wrap'>
      <div class='form-title text-center'>
        <h3>ログイン</h3>
      </div>
      <%= form_with scope: resource, as: resource_name, url: session_path(resource_name), local: true do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
        <div class='form-group'>
          <%= f.email_field :email, autofocus: true, placeholder: 'メールアドレス', class: 'form-control' %>
        </div>

        <div class='form-group'>
          <%= f.password_field :password, placeholder: 'パスワード', class: 'form-control' %>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="field">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
          </div>
        <% end %>

        <div class="actions">
          <%= f.submit 'ログイン', class: 'btn btn-primary w-100' %>
        </div>
      <% end %>
      <div class='guest-login'>
        <%= link_to 'ゲストログイン（閲覧用）', users_guest_sign_in_path, method: :post, class: 'btn btn-success w-100' %>
      </div>
    </div>
    <%= render "devise/shared/links" %>
  </div>
</div>