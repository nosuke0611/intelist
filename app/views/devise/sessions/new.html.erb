<div class='main'>
  <div class='card devise-card'>
    <div class='form-title text-center'>
      <h3>ログイン</h3>
    </div>
    <div class='form-wrap'>
      <%= render "devise/shared/error_messages", resource: resource %>
      <%= form_with scope: resource, as: resource_name, url: session_path(resource_name), local: true do |f| %>
        <div class='form-group mb-3'>
          <%= f.label :email, 'メールアドレス', class: 'form-label' %>
          <%= f.email_field :email, autofocus: true, placeholder: 'nakagawa@example.com', class: 'form-control' %>
        </div>

        <div class='form-group mb-3'>
          <%= f.label :password, 'パスワード', class: 'form-label' %>
          <%= f.password_field :password, placeholder: 'P@ssW0rd', class: 'form-control' %>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="field">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
          </div>
        <% end %>

        <div class='actions'>
          <%= f.submit 'ログイン', class: 'btn btn-primary w-100' %>
        </div>
      <% end %>
      <div class='guest-login mt-2'>
        <%= link_to 'ゲストログイン', users_guest_sign_in_path, method: :post, class: 'btn btn-success w-100' %>
      </div>
    </div>
    <div class='ml-5 mb-3'>
      <%= render 'devise/shared/links' %>
    </div>
  </div>
</div>