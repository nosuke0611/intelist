<div class='main'>
  <div class='card devise-card'>
    <div class='form-title text-center'>
      <h3>パスワード変更</h3>
    </div>
    <div class='form-wrap'>
      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
      <%= f.hidden_field :reset_password_token %>

      <div class='form-group mb-3'>
        <%= f.label :password, '新しいパスワード' %>
        <%= f.password_field :password, autofocus: true, placeholder: 'P@ssW0rd', class: 'form-control' %>
        <small class='form-text text-muted'>半角英数字/記号8～20文字</small>
      </div>

      <div class='form-group mb-3'>
        <%= f.label :password_confirmation, '確認用パスワード' %>
        <%= f.password_field :password_confirmation, placeholder: 'P@ssW0rd', class: 'form-control' %>
      </div>

      <div class='actions'>
        <%= f.submit 'パスワード変更', class: 'btn btn-primary w-100' %>
      </div>
      <% end %>
    </div>
    <div class='ml-5 mb-3'>
      <%= render 'devise/shared/links' %>
    </div>
  </div>
</div>
