<div class='main'>
  <div class='card devise-card'>
    <div class='form-title text-center'>
      <h3>パスワード再発行</h3>
    </div>
    <div class='form-wrap'>
      <%= form_with scope: resource, as: resource_name, url: password_path(resource_name), html: { method: :post }, local: true do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>
        <div class='form-group mb-3'>
          <%= f.label :email, '登録済みのメールアドレス' %>
          <%= f.email_field :email, autofocus: true, autocomplete: 'email', placeholder: 'nakagawa@example.com', class: 'form-control' %>
        </div>
        <div class='actions'>
          <%= f.submit '再発行メール送信', class: 'btn btn-primary w-100' %>
        </div>
      <% end %>
    </div>
    <div class='ml-5 mb-3'>
      <%= render 'devise/shared/links' %>
    </div>
  </div>
</div>
