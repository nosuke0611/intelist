<% provide(:title, 'Users') %>
<h3 class='page-title'>ユーザー一覧</h3>
<div class='row'>
  <aside class='col-md-2'>
    <div class='my-3'><strong>ユーザー名検索</strong></div>
    <%= form_with scope: :searched, url: users_path, class: 'search_form', method: :get, local: false do |f| %>
      <div class='form-group'>
        <%= f.text_field :user_name, value: @user_search_params[:user_name], placeholder: 'ユーザー名', class: 'form-control',id: 'search-username' %>
      </div>
      <div class='actions'>
        <%= f.submit '検索', class: 'btn btn-primary', id: 'search-submit-btn' %>
      </div>
    <% end %>
    <div class='reset'>
      <%= link_to 'リセット', users_path, class: 'btn btn-secondary mt-2', id: 'search-reset-btn' %>
    </div>
  </aside>
  <div class='users-area col-md-10'>
    <%= render 'partial/users/sortable_users_list', users: @users %>
  </div>
</div>