<% provide(:title, '投稿の編集') %>
<div class='form-wrap card'>
  <div class='form-title text-center'>
    <h3>投稿の編集</h3>
  </div>
  <%= form_with model: @post,  local: true do |f| %>
    <div class='form-group'>
      <%= f.text_field :item_name, value: @item.name, class: 'form-control' %>
    </div>
    <div class='form-group'>
      <%= f.text_area :content, value: @post.content, class: 'form-control' %>
    </div>
    <div class='form-group'>
      <%= f.text_field :tag_name, value: @tag_list, placeholder: 'タグ名(複数の場合はスペースで区切る)', class: 'form-control' %>
    </div>
    <div class="actions">
      <%= f.submit '編集する', class: 'btn btn-primary w-100' %>
    </div>
  <% end %>
</div>