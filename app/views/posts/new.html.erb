<% provide(:title, '新規投稿') %>
<div class='form-wrap card'>
  <div class='form-title text-center'>
    <h3>新規投稿</h3>
  </div>
  <%= form_with model: @post,  local: true do |f| %>
    <div class='form-group'>
      <%= f.text_field :item_name, autofocus: true, placeholder: 'アイテム名', class: 'form-control' %>
    </div>
    <div class='form-group'>
      <%= f.text_area :content, autofocus: true, placeholder: '投稿内容', class: 'form-control' %>
    </div>
    <div class='form-group'>
      <%= f.text_field :tag_name, placeholder: 'タグ名(複数の場合はスペースで区切る)', class: 'form-control' %>
    </div>
    <div class="actions">
      <%= f.submit '投稿する', class: 'btn btn-primary w-100' %>
    </div>
  <% end %>
</div>