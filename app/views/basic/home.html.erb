<% if user_signed_in? %>
<h3>タイムライン</h3>
  <div class='row'>
    <aside class='col-md-2'>
      <%= render 'partial/posts/timeline_aside' %>
    </aside>
    <div class='col-md-10'>
      <div class='timeline'>
        <% if @following_posts.present? %>
          <div class='feed-area'>
            <%= render 'partial/posts/following_posts' %>
          </div>
        <% else %>
          <div class='feed-area'>
            <%= render 'partial/posts/all_posts' %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
<% end %>