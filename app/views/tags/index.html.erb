<% provide(:title, 'タグ一覧') %>
<h3 class='page-title'>タグ一覧</h3>
<div class='row'>
  <aside class='col-md-2'>
    <div class='my-3'><strong>タグ名検索</strong></div>
    <%= form_with scope: :searched, url: tags_path, class: 'search_form', method: :get, local: false do |f| %>
      <div class='form-group'>
        <%= f.text_field :tag_name, value: @search_params[:tag_name], placeholder: 'タグ名', class: 'form-control',id: 'search-tagname' %>
      </div>
      <div class='actions'>
        <%= f.submit '検索', class: 'btn btn-primary', id: 'search-submit-btn' %>
      </div>
    <% end %>
    <div class='reset'>
      <%= link_to 'リセット', tags_path, class: 'btn btn-secondary mt-2', id: 'search-reset-btn' %>
    </div>
  </aside>
  <div class='tags-area col-md-10'>
    <%= render 'partial/tags/tags_list', tags: @tags %>
  </div>
</div>